@model RecoverPasswordViewModel
@{
    ViewBag.Title = "RecoverPassword";
}

<h2>Recover Lost Password</h2>

@using (Html.BeginForm("RecoverPassword", "Account"))
{
    @Html.AntiForgeryToken();

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(p => p.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(p => p.Email, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}